        <Label x:Name="Lab_after" Content="Result" HorizontalAlignment="Left" Margin="75,120,0,0" VerticalAlignment="Top" Height="23" Width="83"/>
        <Button x:Name="Action" Content="Inversion" HorizontalAlignment="Left" Margin="75,210,0,0" VerticalAlignment="Top" Width="75" Click="Action_Click"/>
        <Button x:Name="but_exit" Content="Exit" HorizontalAlignment="Left" Margin="265,210,0,0" VerticalAlignment="Top" Width="75" Click="but_exit_Click"/>

    </Grid>
</Window>
